# ----------------------------------------------------------------
# Shell
# ----------------------------------------------------------------

# Show the path to $SHELL
#
# Default: 'off'
# Values:  'on', 'off'
# Flag:    --shell_path
#
# Example:
# on:  '/bin/bash'
# off: 'bash'

shell_path="{{ neofetch_shell_path }}"

# Show $SHELL version
#
# Default: 'on'
# Values:  'on', 'off'
# Flag:    --shell_version
#
# Example:
# on:  'bash 4.4.5'
# off: 'bash'

shell_version="{{ neofetch_shell_version }}"
