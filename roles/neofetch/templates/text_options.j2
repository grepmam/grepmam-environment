# ----------------------------------------------------------------
# Text Options
# ----------------------------------------------------------------

# Toggle bold text
#
# Default:  'on'
# Values:   'on', 'off'
# Flag:     --bold

bold="{{ neofetch_text_options_bold }}"

# Enable/Disable Underline
#
# Default:  'on'
# Values:   'on', 'off'
# Flag:     --underline

underline_enabled="{{ neofetch_text_options_underline_enabled }}"

# Underline character
#
# Default:  '-'
# Values:   'string'
# Flag:     --underline_char

underline_char="{{ neofetch_text_options_underline_char }}"


# Info Separator
# Replace the default separator with the specified string.
#
# Default:  ':'
# Flag:     --separator
#
# Example:
# separator="->":   'Shell-> bash'
# separator=" =":   'WM = dwm'

separator="{{ neofetch_text_options_separator }}"
