# ----------------------------------------------------------------
# Progress Bars
# ----------------------------------------------------------------

# Bar characters
#
# Default:  '-', '='
# Values:   'string', 'string'
# Flag:     --bar_char
#
# Example:
# neofetch --bar_char 'elapsed' 'total'
# neofetch --bar_char '-' '='

bar_char_elapsed="{{ neofetch_progress_bars_bar_char_elapsed }}"
bar_char_total="{{ neofetch_progress_bars_bar_char_total }}"

# Toggle Bar border
#
# Default:  'on'
# Values:   'on', 'off'
# Flag:     --bar_border

bar_border="{{ neofetch_progress_bars_bar_border }}"

# Progress bar length in spaces
# Number of chars long to make the progress bars.
#
# Default:  '15'
# Values:   'num'
# Flag:     --bar_length

bar_length={{ neofetch_progress_bars_bar_length }}

# Progress bar colors
# When set to distro, uses your distro's logo colors.
#
# Default:  'distro', 'distro'
# Values:   'distro', 'num'
# Flag:     --bar_colors
#
# Example:
# neofetch --bar_colors 3 4
# neofetch --bar_colors distro 5

bar_color_elapsed="{{ neofetch_progress_bars_bar_color_elapsed }}"
bar_color_total="{{ neofetch_progress_bars_bar_color_total }}"


# Info display
# Display a bar with the info.
#
# Default: 'off'
# Values:  'bar', 'infobar', 'barinfo', 'off'
# Flags:   --cpu_display
#          --memory_display
#          --battery_display
#          --disk_display
#
# Example:
# bar:     '[---=======]'
# infobar: 'info [---=======]'
# barinfo: '[---=======] info'
# off:     'info'

cpu_display="{{ neofetch_progress_bars_cpu_display }}"
memory_display="{{ neofetch_progress_bars_memory_display }}"
battery_display="{{ neofetch_progress_bars_battery_display }}"
disk_display="{{ neofetch_progress_bars_disk_display }}"
