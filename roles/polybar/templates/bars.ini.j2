[bar/top]

width = 100%
height = 20pt
radius = 6
monitor = ${env:MONITOR:}
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3pt

border-size = 4pt
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 1

separator = | 
separator-foreground = ${colors.disabled}

modules-left = xworkspaces xwindow
modules-right = dollar-today wlan eth date

font-0 = monospace:size=8;2
font-1 = Font Awesome 6 Free:pixelsize=8;2
font-2 = Font Awesome 6 Free Solid:pixelsize=8;2
font-3 = Font Awesome 6 Brands:pixelsize=10;2

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true


[bar/bottom]

width = 100%
height = 20pt
radius = 6
monitor = ${env:MONITOR:}
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3pt

border-size = 4pt
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 1
modules-right = backlight filesystem alsa xkeyboard memory cpu 

separator = | 
separator-foreground = ${colors.disabled}

font-0 = monospace:size=8;2
font-1 = Font Awesome 6 Free:pixelsize=8;2
font-2 = Font Awesome 6 Free Solid:pixelsize=8;2
font-3 = Font Awesome 6 Brands:pixelsize=8;2

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true
